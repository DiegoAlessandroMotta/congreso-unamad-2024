---

interface Props {
	gradoAcademico: string,
	urlFoto: string,
	universidad: string,
	nombre: string,
	biografia: string,
}

const { gradoAcademico, urlFoto, universidad, nombre, biografia } = Astro.props;

---

<div
  id="overlay"
  class="hidden fixed inset-0 bg-gray-800 bg-opacity-75 z-50 h-[100vh]"
>
  <div class="flex mt-14 justify-center max-h-[100vh]">
    <div
      class="flex relative flex-col bg-white rounded-lg max-w-[800px] max-h-[80vh] overflow-auto overscroll-contain"
    >
      <!-- Botón X de cierre -->
      <header
        id="btnx_cerra_modal"
        class="absolute top-0 right-0 cursor-pointer text-xl text-white z-10"
      >
        <div
          class="flex justify-center items-center w-12 h-12 bg-primary-500 rounded-[0px_0px_0px_10px]"
        >
          <div>X</div>
        </div>
      </header>

      <section
        class="grid grid-cols-[1fr_auto] gap-3 p-4 max-lg:grid-cols-1 dark:bg-gray-100"
      >
        <div>
          <div
            class="sticky top-0 max-lg:flex max-lg:flex-col max-lg:items-center"
          >
            <p
              id="gradoAcademicoPonente"
              class="text-center text-xl text-black font-bold"
            >
              { gradoAcademico }
            </p>
            <div
              id="imagenes"
              class="flex justify-center items-center w-60 h-60 overflow-hidden rounded-full shadow-[0_35px_60px_-15px_rgba(0,0,0,0.3)]"
            >
							<img
								src={urlFoto}
								alt="foto del ponente"
								class="h-full object-cover hidden"
							/>
            </div>
            <p id="estudioPonente" class="text-center text-black font-semibold">
              {universidad}
            </p>
          </div>
        </div>
        <div>
          <h2 id="nombrePonente" class="text-2xl font-bold text-black mb-4">
            {nombre}
          </h2>
          <p id="biografiaPonente" class="text-gray-700 mb-2">
            {biografia}
          </p>
        </div>
      </section>
      <!-- Botón de cierre -->
      <footer class="flex justify-end p-4">
        <button
          class="bg-primary-500 text-white px-4 py-2 rounded"
					>Cerrar</button
        >
      </footer>
    </div>
  </div>
</div>
