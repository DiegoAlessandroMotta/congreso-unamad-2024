<style>
  .slider {
    width: 90vw;
    overflow: hidden;
  }

  .slider .slide-track {
    display: flex;
    animation: scroll 70s linear infinite;
    -webkit-animation: scroll 70s linear infinite;
    width: calc(200px * 14);
  }

  .slider .slide-track2 {
    display: flex;
    animation: scrollInvert 70s linear infinite;
    -webkit-animation: scrollInvert 70s linear infinite;
    width: calc(200px * 14);
  }

  .slider .slide {
    width: 200px;
  }

  .slider .slide img {
    width: 100%;
  }

  @keyframes scroll {
    0% {
      -webkit-transform: translateX(0);
      transform: translateX(0);
    }
    100% {
      -webkit-transform: translateX(calc(-200px * 11));
      transform: translateX(calc(-200px * 11));
    }
  }

  @keyframes scrollInvert {
    0% {
      -webkit-transform: translateX(calc(200px * -14));
      transform: translateX(calc(200px * -14));
    }
    100% {
      -webkit-transform: translateX(calc(0));
      transform: translateX(calc(0));
    }
  }
</style>
