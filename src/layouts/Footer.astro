---
import Container from "../components/shared/Container.astro";
import Paragraph from "../components/shared/Paragraph.astro";
import logoUnamad from "./assets/logoUnamad.png";
import logoAcreditando from "./assets/logoAcreditando.png";
import Facebook from "./components/Facebook.astro";
import Tiktok from "./components/Tiktok.astro"
import logoSistemas from "./assets/logo-sistemas.png"
---

<div class="relative bg-base-200 dark:bg-base-dark-800 ">
  <footer class="relative pt-2 rounded-t-3xl">
    <div
        class="grid grid-cols-[1fr_auto] justify-between relative px-10 max-sm:grid-cols-1"
      >
      
      <div class="flex flex-col">
        <div class="h-full flex  flex-col">
          <a href="#" class="relative gap-3 text-5xl font-semibold text-heading-1">
            UNAMAD
          </a>

          <section class="flex flex-row max-sm:flex-col gap-5">

            <div class="grid grid-cols-[auto_1fr] items-center p-0 gap-2">
              <div class="h-[80px]">
                <img src={logoUnamad.src} class="h-full object-cover" alt="">
              </div>
              <p class="text-bold font-[arial]">
                Universidad Nacional Amázonica de Madre de Dios
              </p>
            </div>


            <div class="grid grid-cols-[auto_1fr] items-center p-0 gap-2">
              <div class="h-[80px]">
                <img src={logoSistemas.src} class="h-full object-cover" alt="">
              </div>
              <p class="text-bold font-[arial]">
                Ingeniería de Sistemas e Informática
              </p>
            </div>

          </section>
        </div>

        
        <div class="min-h-max flex items-center gap-4 text-heading-3 mt-8">
          <Facebook />
          <Tiktok />
        </div>
      </div>

      <section class="flex max-sm:justify-center">
        <div class="h-[100px]">
          <img src={logoAcreditando.src} class="h-full" alt="">
        </div>
      </section> 

    </div>
    <div class="py-2 relative">
      <Container>
        <div
          class="flex justify-between items-center gap-6 md:text-lg text-heading-3"
        >
          <div>
            &copy; <span id="year"></span> UNAMAD. Derechos reservados
          </div>
        </div>
      </Container>
    </div>
  </footer>
</div>
